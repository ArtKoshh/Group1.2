@model IList<JensensWebApp.Models.Article>

@{
    ViewBag.Title = "Articles";
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Add Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">


    Dictionary<string, string> topicDisplayNames = new Dictionary<string, string>
{
    {"Halsa", "Hälsa"},
    {"SamhalleKonflikter", "Samhälle och Konflikter"},
    {"Miljo", "Miljö"},
    {"VetenskapTeknik", "Vetenskap och Teknik"},
    {"LivsstillFritt", "Livsstil och Fritid"},
    {"Ekonomi", "Ekonomi"},
    {"Religion", "Religion"},
    {"Idrott", "Idrott"}
};

}

<!-- Kheyria Awes Header styling -->
<h1 style="color: white; font-size: 24px; font-weight: bold; font-family: cursive; text-decoration: underline;">Articles</h1>


<div class="container">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {

        <!-- Tanya Svetanovska Text Colouring -->
        <label for="topic" style="color: #ffffff; font-weight: bold; font-family: cursive;">Select a topic:</label>
        <select id="topic" name="topic" class="form-select">
            <option value="">All</option>
            @foreach (var topic in topicDisplayNames)
            {
                <option value="@topic.Key">@topic.Value</option>
            }
        </select>

        <label for="sortBy" style="color: #ffffff; font-weight: bold;font-family: cursive;">Sort by:</label>
        <select id="sortBy" name="sortBy" class="form-select">
            <option value="">Default</option>
            <option value="newest">Newest to Oldest</option>
            <option value="oldest">Oldest to Newest</option>
        </select>
//------Artur Koshmin , Filter Knappen------
  <style>
    .btn-multiple {
      background: linear-gradient(to right, red,Blue,indigo,violet,Black);
      color: gold;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
     
 
    }
  </style>

        <button type="submit" class="btn btn-outline-dark primary btn-outline-dark btn-multiple">Filter</button>


    }

    <div class="row mt-4">
        @foreach (var article in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Summary</p>
                        <a href="@article.Link" class="card-link" target="_blank">Läs mer</a>
                        <p class="card-text"><small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<body>
    <style>
        .scroll-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #555555;
            color: #ffffff;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 15px;
            border-radius: 50%;
            font-size: 24px;
            z-index: 9999;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

            .scroll-to-top.show {
                opacity: 1;
            }
    </style>
<button onclick="scrollToTop()" class="scroll-to-top" id="scrollToTopButton">
    <i class="fas fa-arrow-up"></i>
</button>

<!-- Add Bootstrap JS (required for the scroll-to-top button) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    window.onscroll = function () { showScrollToTopButton() };

    function showScrollToTopButton() {
        var scrollToTopButton = document.getElementById("scrollToTopButton");
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            scrollToTopButton.classList.add("show");
        } else {
            scrollToTopButton.classList.remove("show");
        }
    }
</script>
</body>
</>
